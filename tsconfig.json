{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "$mixins/*": ["resources/js/mixins/*"],
      "$api/*": ["resources/js/services/api/endpoints/*"],
      "$components/*": ["resources/js/components/*"],
      "$common/*": ["resources/js/components/common/*"],
      "$tables/*": ["resources/js/tables/*"],
      "$types/*": ["resources/js/@types/*"],
      "$services/*": ["resources/js/services/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "resources/js/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
